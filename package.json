{
  "name": "electron-quick-start",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "nodemon --ext js,html,css --exec electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.ec.codeeditor",
    "productName": "CodeEditor",
    "files": ["**/*"],
    "directories": {"buildResources": "assets"},
    "icon": "assets/icon",
    "win": {
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "msi"
        }
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/icon.png"
    }
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  }
}
