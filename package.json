{
  "name": "code-editor",
  "version": "1.0.1",
  "description": "Code Editing App",
  "main": "main.js",
  "scripts": {
    "start": "nodemon --ext js,html,css --exec electron .",
    "build": "electron-builder",
    "release": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.ec.codeeditor",
    "productName": "CodeEditor",
    "publish": [
      {
        "provider": "github"
      }
    ],
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "icon": "assets/icon",
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/icon.png"
    }
  },
  "repository": "https://github.com/ahmed-elsakka/code-editor",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  }
}
